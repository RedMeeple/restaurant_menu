<p id="notice"><%= notice %></p>

<h1>Restaurant Name</h1>

<div class="container">
  <% @courses.each do |course| %>
    <div class="col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th colspan="3"><h2><span class="title"><%= course.name %><%= image_tag image_url("#{course.name.downcase}.jpg"), class: "img" %></span></h2></th>
          </tr>
          <tr>
            <th><button type="button" class="btn btn-default btn-md">
              <span class="glyphicon glyphicon-plus" aria-hidden="true">
                <%= link_to "#{course.name.chop}", new_dish_path(course_id: course.id) %>
              </span></button>
            </th>
          </tr>
          <tr>
            <th><h4><span class="label label-success">Name</span></h4></th>
            <th><h4><span class="label label-success">Description</span></h4></th>
            <th><h4><span class="label label-success">Price</span></h4></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @course_dishes = @dishes.select {|dish| dish.course_id == course.id} %>
          <% @course_dishes.each do |dish| %>
            <tr>
              <td><%= link_to dish.name, dish %></td>
              <td><%= dish.description %></td>
              <td><%= "$#{dish.price}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
